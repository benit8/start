{
  "name": "start",
  "version": "1.0.0",
  "description": "Startpage",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "lessc -x src/less/main.less dist/styles.css",
    "watch:css": "onchange 'src/less' -- npm run build:css",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange 'src/js' -- webpack --mode=development",
    "build:html": "cp src/views/index.html dist/",
    "watch:html": "onchange 'src/views' -- npm run build:html",
    "watch": "run-p watch:*",
    "build": "run-p build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benit8/start.git"
  },
  "author": "blormeau@outlook.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benit8/start/issues"
  },
  "homepage": "https://github.com/benit8/start#readme",
  "dependencies": {
    "country-code-emoji": "^1.0.0",
    "less": "^3.12.2",
    "strftime": "^0.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "babel-loader": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0"
  }
}
